
sudo mount -o loop mtximage /mnt
sudo cp mtx /mnt/boot/mtx
sudo umount /mnt

echo --------------------- make $1 -----------------------
as86 -o u.o u.s
bcc -c -ansi $1.c
ld86 -o $1 u.o $1.o mtxlib /usr/lib/bcc/libc.a

sudo mount -o loop mtximage /mnt
sudo cp $1 /mnt/bin/$1
sudo umount /mnt

rm *.o $1
echo done $1

